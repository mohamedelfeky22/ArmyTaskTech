@model MyTask.Models.Student

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <div>
        <p>Student Name : @Model.Name</p>
        <p>Birth Date : @Model.BirthDate.ToString("dd/MM/yyyy")</p>
        <p>Governorate : @Model.Governorate.Name</p>
        <p>Neighborhood : @Model.Neighborhood.Name</p>
        <p>Field : @Model.Field.Name</p>
    </div>    

    @using (Html.BeginForm()) {

        <div class="form-actions no-color">
            <button class="btn btn-danger" type="submit">Delete</button>
            <button class="btn btn-default">@Html.ActionLink("Back", "Index")</button>
        </div>
    }
</div>
